#include<iostream>
using namespace std;

void selectionsort(int n, int arr[]) {
    for(int i=0;i<n-1;i++){
        int min=i;
        for(int j=i+1;j<n;j++){
            if(arr[j]<arr[min]){
                min=j;
            }
            
        }
        if(min != i){
            swap(arr[i],arr[min]);
        }
    }
}

void printarray(int n,int arr[]){
    for(int i = 0;i<=n;i++){
        cout << arr[i] << " ";
        
    }
    cout << "\n";
}
int main (){
    int arr[] = {4,1,3,9,7};
    int n = 5;
    selectionsort(n,arr);
    printarray(n,arr);
    return 0;
}
